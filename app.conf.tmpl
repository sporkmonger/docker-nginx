upstream app {
  {{ $data := json (getv "/registry/services/specs/default/app-server") }}
  {{ $app_server_ip := $data.spec.portalIP }}
  {{ $app_server_port := (index $data.ports 0).port }}
  server {{ $app_server_ip }}:{{ $app_server_port }};
}

server {
  server_name _;

  location / {
    proxy_pass http://app;
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}
